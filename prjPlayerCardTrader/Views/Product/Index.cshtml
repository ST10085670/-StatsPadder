@model IEnumerable<prjPlayerCardTrader.Models.Product>


<h2>Products</h2>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.CardName</td>
                <td>@product.CardType</td>
                <td>@product.CardPrice.ToString("C")</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.Imageurl))
                    {
                        <img src="@product.Imageurl" alt="@product.CardName" width="100" />
                    }
                    else
                    {
                        <span>No image</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
